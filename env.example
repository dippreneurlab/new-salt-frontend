# Firebase client config
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=000000000000
NEXT_PUBLIC_FIREBASE_APP_ID=1:000000000000:web:abcdefghijk

# Firebase admin (server-side)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\nabc123...\\n-----END PRIVATE KEY-----\\n"

# Cloud SQL / Postgres
# Option 1: single connection string (recommended for local dev)
DATABASE_URL=postgres://user:password@127.0.0.1:5432/quote_tool
# Option 2: granular settings + optional Cloud SQL socket
POSTGRES_HOST=
POSTGRES_PORT=5432
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=
POSTGRES_SSL=true
# If using the Cloud SQL Proxy / connector socket path on Cloud Run/Firebase hosting backends
CLOUD_SQL_CONNECTION_NAME=project:region:instance
